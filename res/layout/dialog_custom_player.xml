        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newHSText"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/d_customPlayerSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savePlayer" />

        <Button
            android:id="@+id/d_customPlayerAbandon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abandonPlayer" />
    </LinearLayout> -->

</RelativeLayout>