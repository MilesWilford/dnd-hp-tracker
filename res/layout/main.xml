<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="64dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentHPView"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center" />
        
        <ScrollView
            android:id="@+id/showWorkScroller"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >
            
            <LinearLayout 
                android:id="@+id/showWorkLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:orientation="vertical"
        		android:layout_gravity="bottom" />
            
        </ScrollView>
        
        <TextView
            android:id="@+id/currentEntryView"
            android:layout_width="fill_parent"
            android:layout_height="48dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
        <TableLayout
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:stretchColumns="*" >
            
            <TableRow
                android:layout_weight="1">
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
            </TableRow>
            
            <TableRow
                android:layout_weight="1">
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
            </TableRow>
            
            <TableRow
                android:layout_weight="1">
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
                <Button
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text=" " />
                
            </TableRow>
            
            
            
        </TableLayout>
        
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
            	android:gravity="center" >
            
	            <Button
	                android:id="@+id/DSSub"
	                android:layout_width="48dp"
	                android:layout_height="48dp"
	                android:text="-" />
	            
	            <Button
	                android:id="@+id/inputDS"
	                android:layout_width="wrap_content"
	                android:layout_height="48dp"
	                android:text="Death Saves: 3" />
	            
	            <Button
	                android:id="@+id/DSAdd"
	                android:layout_width="48dp"
	                android:layout_height="48dp"
	                android:text="+" />
        
	    	</LinearLayout>
	    	
            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
            	android:gravity="center" >
            
	            <Button
	                android:id="@+id/surgesSub"
	                android:layout_width="48dp"
	                android:layout_height="48dp"
	                android:text="-" />
	            
	            <Button
	                android:id="@+id/inputSurges"
	                android:layout_width="wrap_content"
	                android:layout_height="48dp"
	                android:text="Surges: 0" />
	            
	            <Button
	                android:id="@+id/surgesAdd"
	                android:layout_width="48dp"
	                android:layout_height="48dp"
	                android:text="+" />
        
	    	</LinearLayout>
	    	
            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
            	android:gravity="center" >
            
	            <Button
	                android:id="@+id/ongoSub"
	                android:layout_width="48dp"
	                android:layout_height="48dp"
	                android:text="-" />
	            
	            <Button
	                android:id="@+id/inputOngo"
	                android:layout_width="wrap_content"
	                android:layout_height="48dp"
	                android:text="Ongoing: 0" />
	            
	            <Button
	                android:id="@+id/ongoAdd"
	                android:layout_width="48dp"
	                android:layout_height="48dp"
	                android:text="+" />
        
	    	</LinearLayout>
	            
        </LinearLayout>
        
        <LinearLayout
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
			android:baselineAligned="false" >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
                
                <Button
                    android:id="@+id/inputClear"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/Clear" />
                
            </LinearLayout>
            
	        <TableLayout
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="3">
	                
	            <TableRow
	                android:layout_weight="1">

	                <Button
	                    android:id="@+id/input1"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="1" />

	                <Button
	                    android:id="@+id/input2"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="2" />

	                <Button
	                    android:id="@+id/input3"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="3" />
	                  
	            </TableRow>
	            
	            <TableRow
	                android:layout_weight="1">

	                <Button
	                    android:id="@+id/input4"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="4" />

	                <Button
	                    android:id="@+id/input5"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="5" />

	                <Button
	                    android:id="@+id/input6"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="6" />
	                  
	            </TableRow>
	            
	            <TableRow
	                android:layout_weight="1">

	                <Button
	                    android:id="@+id/input7"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="7" />

	                <Button
	                    android:id="@+id/input8"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="8" />

	                <Button
	                    android:id="@+id/input9"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="9" />
	                  
	            </TableRow>
	            
	            <TableRow
	                android:layout_weight="1">

	                <Button
	                    android:id="@+id/input0"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="1"
	                    android:text="0" />

	                <Button
	                    android:id="@+id/inputHS"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_span="2"
	                    android:layout_weight="2"
	                    android:text="HS: 0" />
	                  
	            </TableRow>
	                           
	        </TableLayout>

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:orientation="vertical" >

	            <Button
	                android:id="@+id/inputAdd"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="+" />
	            
	            <Button
	                android:id="@+id/inputSub"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="-" />
	            
	        </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>
